<div class="flex justify-between items-center mb-6">
  <div class="flex items-center space-x-2">
    <h2 class="text-3xl font-semibold flex items-center space-x-2">
      <i class="fas fa-users"></i> <span>Mon Cloud</span>
    </h2>
  </div>
  <div class="flex space-x-2">
    <!-- Bouton pour ouvrir le modal de création de dossier -->
    <button 
      onclick="openModal('folderCreateModal')" 
      class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition flex items-center">
      <i class="fas fa-folder-plus mr-2"></i> Créer un dossier
    </button>

    <!-- Bouton pour ouvrir le modal de création de fichier -->
    <button 
      onclick="openModal('fileCreateModal')" 
      class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition flex items-center">
      <i class="fas fa-file-upload mr-2"></i> Créer un fichier
    </button>

    <!-- Bouton pour ouvrir le modal d'importation -->
    <button 
      onclick="triggerFileImport()" 
      class="bg-yellow-600 text-white px-4 py-2 rounded-md hover:bg-yellow-700 transition flex items-center">
      <i class="fas fa-upload mr-2"></i> Importer des fichiers
    </button>
  </div>
</div>

<!-- Modal pour la création de dossier -->
<div id="folderCreateModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg p-6 w-1/3">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-bold">Créer un dossier</h3>
      <button class="text-gray-500 hover:text-gray-700" onclick="closeModal('folderCreateModal')">✖</button>
    </div>
    <form id="folderForm" onsubmit="handleCreateFolder('<%= basePath %>', '<%= currentPath %>', event)">
      <div class="mb-4">
        <label for="folderName" class="block text-sm font-medium text-gray-700">Nom du dossier</label>
        <input type="text" id="folderName" name="folderName" class="w-full border rounded-md p-2 mt-1" required>
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition">
        Créer
      </button>
    </form>
  </div>
</div>

<!-- Modal pour la création de fichier -->
<div id="fileCreateModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg p-6 w-1/3">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-bold">Créer un fichier</h3>
      <button class="text-gray-500 hover:text-gray-700" onclick="closeModal('fileCreateModal')">✖</button>
    </div>
    <form id="fileForm" onsubmit="handleCreateFile('<%= basePath %>', '<%= currentPath %>', event)">
      <div class="mb-4">
        <label for="fileName" class="block text-sm font-medium text-gray-700">Nom du fichier</label>
        <input type="text" id="fileName" name="fileName" class="w-full border rounded-md p-2 mt-1" required>
      </div>
      <button type="submit" class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition">
        Créer
      </button>
    </form>
  </div>
</div>

<!-- Modal pour l'importation -->
<div id="importModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg p-6 w-1/3">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-bold">Importer un fichier ou un dossier</h3>
      <button class="text-gray-500 hover:text-gray-700" onclick="closeModal('importModal')">✖</button>
    </div>
    <form id="importForm" onsubmit="handleImport('<%= basePath %>', '<%= currentPath %>', event)">
      <!-- Importer un fichier spécifique -->
      <div class="mb-4">
        <label for="importFile" class="block text-sm font-medium text-gray-700">Sélectionnez des fichiers</label>
        <input id="fileImportInput" type="file" class="hidden" onchange="handleFileImport('<%= basePath %>', '<%= currentPath %>')">
      </div>

      <button type="submit" class="w-full bg-yellow-500 text-white px-4 py-2 rounded-md hover:bg-yellow-600 transition">
        Importer
      </button>
    </form>
  </div>
</div>
